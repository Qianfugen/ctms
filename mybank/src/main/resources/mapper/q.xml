<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--
namespace:必须是对应接口的全路径
-->
<mapper namespace="com.zl.dao.UserDao">
    <!--手动配置表字段和实体类属性的映射关系-->
    <resultMap id="userAndRole" type="user">
        <!--专门用来配置主键的映射关系-->
        <id property="id" column="id"></id>
        <!--配置普通字段的映射关系-->
        <result property="userId" column="user_id"></result>
        <result property="name" column="NAME"></result>
        <result property="pwd" column="PWD"></result>
        <result property="age" column="AGE"></result>
        <result property="sex" column="SEX"></result>
        <!--
            配置外键和实体类对象之间的映射关系
            select:执行引用的那条sql语句
                select * from t_role where id=#{r_id}
            javaType:你引用的这条sql语句执行完成以后会封装成什么对象
            column:你执行的这条引用的sql语句需要当前表那个字段的值
            property:执行完结果以后赋值给该实体类中的那个属性
        -->
        <association property="role" column="r_id" javaType="role"
                     select="com.zl.dao.RoleDao.queryRoleByUser"></association>
    </resultMap>
    <select id="login" parameterType="user" resultMap="userAndRole">
        select * from t_user where name=#{name} and pwd=#{pwd}
    </select>
</mapper>